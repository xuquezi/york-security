<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.york.dao.UserRoleMapper">
    <resultMap id="MyBaseResultMap" type="com.example.york.entity.UserRole">
        <id column="ur_serial" property="userRoleId" jdbcType="INTEGER"></id>
        <result column="user_id" property="userId" jdbcType="INTEGER"></result>
        <result column="role_id" property="roleId" jdbcType="INTEGER"></result>
    </resultMap>

    <delete id="deleteRolesByUserId">
        DELETE FROM user_role
        WHERE user_id = #{userId}
    </delete>

    <insert id="insertRoles">
        INSERT  into user_role (user_id,role_id)
        VALUES (#{userId,jdbcType=INTEGER}, #{roleId,jdbcType=INTEGER})
    </insert>

    <select id="countUserRoleByUserId" resultType="Integer">
        SELECT COUNT(1) from  role r,user_role ur
        where r.role_serial = ur.role_id
        and ur.user_id = #{userId,jdbcType=INTEGER}
        and r.status = 0
        and r.delete_status = 0
    </select>

    <delete id="deleteNotActiveUserRole">
        DELETE from user_role
        where user_id in(select user_serial
        from york_user where delete_status = 0
        and status = 2)
    </delete>
</mapper>